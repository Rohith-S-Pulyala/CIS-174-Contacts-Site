@model ContactManager.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
}

<!--Rohith Pulyala, CIS 174, 1/27/2026-->

<!--Page created through scaffolding.-->

<h1>Delete Contact</h1>
<h3>Are you sure you want to delete this?</h3>

<!--Page for name and phone number deletion-->

<div>
    <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class = "col-sm-10">@Model.Name</dd>

            <dt class = "col-sm-2">Phone</dt>
            <dd class = "col-sm-10">@Model.PhoneNumber</dd>
        </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
